<%= form_with(model: property, local: true) do |form| %>
  <% if property.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(property.errors.count, "error") %> prohibited this property from being saved:</h2>

      <ul>
      <% property.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <br><%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <br><%= form.number_field :rent %><span>円</span>
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <br><%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <br><%= form.number_field :age %><span>年</span>
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <br><%= form.remarks :note %>
  </div>

<hr>

  <% i = 1 %>
  <%= form.fields_for :stations do |f| %>
    <h3>最寄り駅<%= i %></h3>
    <%= f.label :路線名 %>
    <br><%= f.text_field :train %>
    <br>
    <%= f.label :駅名 %>
    <br><%= f.text_field :name %>
    <br>
    <%= f.label :徒歩分数 %>
    <br><%= f.text_field :minute %><span>分</span>
    <% i += 1 %>
  <% end %>
  <div class="actions">
    <br><%= form.submit '登録する'%>
  </div>
<% end %>