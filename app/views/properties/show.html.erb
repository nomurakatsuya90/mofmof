<p id="notice"><%= notice %></p>

<h1>閲覧</h1>
<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<hr>

<% i = 1 %>
<% @stations.each do |s| %>
  <h4>最寄り駅<%= i %></h4>
  <p>路線名：<%= s.train %></p>
  <p>駅名：<%= s.name %></p>
  <p>徒歩分数：<%= s.minute %></p>
  <% i += 1 %>
<% end %>
